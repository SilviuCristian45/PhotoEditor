{
  "devDependencies": {
    "gh-pages": "^2.1.1",
    "husky": "^3.0.5"
  },
  "scripts": {
    "predeploy": "all-contributors generate",
    "deploy": "gh-pages -d src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "all-contributors generate && git add README.md",
      "pre-push": "npm run deploy"
    }
  }
}
